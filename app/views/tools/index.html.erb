<h1>Listing tools</h1>

<table>
  <tr>
    <th>Category</th>
    <th>Make</th>
    <th>Model</th>
    <th>Condition</th>
    <th>Comment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tools.each do |tool| %>
  <tr>
    <td><%= tool.category_id %></td>
    <td><%= tool.make %></td>
    <td><%= tool.model %></td>
    <td><%= tool.condition %></td>
    <td><%= tool.comment %></td>
    <td><%= link_to 'Show', tool %></td>
    <td><%= link_to 'Edit', edit_tool_path(tool) %></td>
    <td><%= link_to 'Destroy', tool, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

